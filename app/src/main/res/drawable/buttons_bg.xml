<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle">
            <corners android:radius="3dip"/>
            <stroke android:width="1dip" android:color="#000638"/>
            <gradient android:angle="-90" android:startColor="#cccedf" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape android:shape="rectangle">
            <corners android:radius="3dip"/>
            <stroke android:width="1dip" android:color="#000638"/>
            <solid android:color="#000698"/>
        </shape>
    </item>

    <item >
        <shape android:shape="rectangle">
            <corners android:radius="3dip"/>
            <stroke android:width="1dip" android:color="#000638"/>
            <gradient android:angle="-90" android:startColor="#000695" />
        </shape>
    </item>
</selector>
